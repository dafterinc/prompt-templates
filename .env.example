# Supabase credentials - Replace with your own values in a .env file
# Use http://127.0.0.1:54321 for local Supabase development
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Required for admin functionality - Get this from your Supabase project settings
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Environment mode - Options: 'development', 'production'
# Set to 'production' to test production security settings locally
# This allows you to test production security settings without deploying
APP_ENV=development

# Security-related settings
# These settings are primarily used in production mode

# Set to 'true' to force HTTPS in production
FORCE_HTTPS=true

# Allowed origins for CORS (comma-separated list)
# Example: https://yourdomain.com,https://admin.yourdomain.com
# For local testing with production security: http://localhost:5174
ALLOWED_ORIGINS=https://yourdomain.com

# Rate limiting settings
# Requests per minute per IP
RATE_LIMIT_MAX_REQUESTS=100
# Rate limit window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# File upload settings
# Maximum file size in MB
MAX_FILE_SIZE_MB=2
# Allowed MIME types (comma-separated)
ALLOWED_MIME_TYPES=image/png,image/jpeg,application/pdf,text/plain 